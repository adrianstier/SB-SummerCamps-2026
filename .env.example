# Supabase Configuration
# Get these from your Supabase project settings > API
VITE_SUPABASE_URL=https://your-project.supabase.co
VITE_SUPABASE_ANON_KEY=your-anon-key-here

# Supabase Service Key (for backend email service)
# This is different from the anon key - get it from Settings > API > Service Role Key
SUPABASE_URL=https://your-project.supabase.co
SUPABASE_SERVICE_KEY=your-service-role-key-here

# Google Calendar API (optional, for calendar sync)
VITE_GOOGLE_CLIENT_ID=your-google-client-id.apps.googleusercontent.com

# Email Configuration
# Provider options: resend, sendgrid, console (for development)
EMAIL_PROVIDER=console
EMAIL_FROM=noreply@sbsummercamps.com
APP_URL=https://sbsummercamps.com

# Resend API (if using Resend)
RESEND_API_KEY=re_your_resend_api_key

# SendGrid API (if using SendGrid)
SENDGRID_API_KEY=SG.your_sendgrid_api_key

# Internal API key for cron job authentication
INTERNAL_API_KEY=your-random-secure-key-here
